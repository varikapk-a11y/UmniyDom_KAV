// ======================================================================
// –ù–ê–ó–í–ê–ù–ò–ï: Test_ESP32_Hub_WiFi_ESP-NOW.ino
// –í–ï–†–°–ò–Ø: 1.0 –¥–ª—è ESP32 Arduino Core 3.3.5+
// –£–°–¢–†–û–ô–°–¢–í–û: ESP32-WROOM (–∏–ª–∏ –ª—é–±–æ–π ESP32 —Å Wi-Fi)
// –§–£–ù–ö–¶–ò–Ø: 1. –°–æ–∑–¥–∞—ë—Ç Wi-Fi —Å–µ—Ç—å "ESP32-Hub-Test"
//          2. –†–∞–∑–¥–∞—ë—Ç –≤–µ–±-—Å—Ç—Ä–∞–Ω–∏—Ü—É —Å –∫–Ω–æ–ø–∫–∞–º–∏
//          3. –ü—Ä–∏–Ω–∏–º–∞–µ—Ç –∫–æ–º–∞–Ω–¥—ã –ø–æ WebSocket
//          4. –û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç –∫–æ–º–∞–Ω–¥—ã –ø–æ ESP-NOW –Ω–∞ —É–∑–µ–ª AC:EB:E6:49:10:28
//          5. –ü—Ä–∏–Ω–∏–º–∞–µ—Ç –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è –∏ –æ–±–Ω–æ–≤–ª—è–µ—Ç –≤–µ–±-—Å—Ç–∞—Ç—É—Å
// –í–ê–ñ–ù–û: –ò—Å–ø–æ–ª—å–∑—É–µ—Ç –Ω–æ–≤—ã–π API ESP-NOW –¥–ª—è Core 3.3.5
// ======================================================================

#include <WiFi.h>
#include <ESPAsyncWebServer.h>
#include <AsyncTCP.h>
#include <esp_now.h>
#include <ArduinoJson.h>

// ------ 1. –ö–û–ù–§–ò–ì–£–†–ê–¶–ò–Ø WI-FI –¢–û–ß–ö–ò –î–û–°–¢–£–ü–ê ------
const char* AP_SSID = "ESP32-Hub-Test";
const char* AP_PASSWORD = "test12345678";

// ------ 2. –ö–û–ù–§–ò–ì–£–†–ê–¶–ò–Ø ESP-NOW ------
// –ó–ê–ú–ï–ù–ò–¢–ï –≠–¢–û–¢ –ú–ê–ö-–ê–î–†–ï–° –ù–ê –ê–î–†–ï–° –í–ê–®–ï–ì–û –£–ó–õ–ê ESP32-C3!
uint8_t nodeMacAddress[] = {0xAC, 0xEB, 0xE6, 0x49, 0x10, 0x28}; // –£–∑–µ–ª: AC:EB:E6:49:10:28

// –°—Ç—Ä—É–∫—Ç—É—Ä–∞ –¥–∞–Ω–Ω—ã—Ö ESP-NOW (–¥–æ–ª–∂–Ω–∞ —Å–æ–≤–ø–∞–¥–∞—Ç—å —Å–æ —Å—Ç—Ä—É–∫—Ç—É—Ä–æ–π –Ω–∞ —É–∑–ª–µ!)
typedef struct esp_now_message {
    char command[16];      // "LED_ON", "LED_OFF", "ACK_ON", "ACK_OFF"
    uint8_t sender_id;     // ID –æ—Ç–ø—Ä–∞–≤–∏—Ç–µ–ª—è
} esp_now_message;

esp_now_message outgoingMessage; // –î–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏
esp_now_message incomingMessage; // –î–ª—è –ø—Ä–∏—ë–º–∞

// ------ 3. –ì–õ–û–ë–ê–õ–¨–ù–´–ï –û–ë–™–ï–ö–¢–´ ------
AsyncWebServer server(80);
AsyncWebSocket ws("/ws"); // WebSocket endpoint

// ------ 4. –ü–†–û–¢–û–¢–ò–ü–´ –§–£–ù–ö–¶–ò–ô (–ù–æ–≤—ã–π API –¥–ª—è Core 3.3.5) ------
void onWebSocketEvent(AsyncWebSocket *server, AsyncWebSocketClient *client, 
                      AwsEventType type, void *arg, uint8_t *data, size_t len);
void onEspNowDataSent(const wifi_tx_info_t *info, esp_now_send_status_t status);
void onEspNowDataRecv(const esp_now_recv_info_t *recv_info, const uint8_t *incomingData, int len);
void sendCommandToNode(String cmd);
void broadcastStatus(String statusText);

// ===================== SETUP =====================
void setup() {
    Serial.begin(115200);
    delay(1000);
    Serial.println("\n=== –¢–ï–°–¢–û–í–´–ô –•–ê–ë (Wi-Fi + ESP-NOW) ===");
    Serial.println("–í–µ—Ä—Å–∏—è –¥–ª—è ESP32 Core 3.3.5+");

    // ------ 1. –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø WI-FI –¢–û–ß–ö–ò –î–û–°–¢–£–ü–ê ------
    Serial.print("–ó–∞–ø—É—Å–∫ —Ç–æ—á–∫–∏ –¥–æ—Å—Ç—É–ø–∞: ");
    Serial.println(AP_SSID);
    WiFi.mode(WIFI_AP);
    if (!WiFi.softAP(AP_SSID, AP_PASSWORD)) {
        Serial.println("‚ùå –û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è —Ç–æ—á–∫–∏ –¥–æ—Å—Ç—É–ø–∞!");
        while(1) delay(1000);
    }
    Serial.print("IP –∞–¥—Ä–µ—Å —Ö–∞–±–∞: ");
    Serial.println(WiFi.softAPIP());

    // ------ 2. –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø WEB-–°–ï–†–í–ï–†–ê –ò WEB SOCKET ------
    // –†–∞–∑–¥–∞—á–∞ –≥–ª–∞–≤–Ω–æ–π —Å—Ç—Ä–∞–Ω–∏—Ü—ã
    server.on("/", HTTP_GET, [](AsyncWebServerRequest *request) {
        String html = R"rawliteral(
        <!DOCTYPE html>
        <html>
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>–¢–µ—Å—Ç ESP-NOW –•–∞–±</title>
            <style>
                body {font-family: Arial; text-align: center; margin-top: 50px;}
                button {font-size: 20px; padding: 15px 30px; margin: 10px; border: none; border-radius: 8px; cursor: pointer;}
                #btnOn {background: #4CAF50; color: white;}
                #btnOff {background: #f44336; color: white;}
                #status {margin-top: 30px; font-size: 22px; padding: 15px; background: #f5f5f5; border-radius: 8px;}
                .on {color: #4CAF50; font-weight: bold;}
                .off {color: #f44336; font-weight: bold;}
            </style>
        </head>
        <body>
            <h1>ESP-NOW –¢–µ—Å—Ç: –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —É–¥–∞–ª—ë–Ω–Ω—ã–º —É–∑–ª–æ–º</h1>
            <p>MAC —É–∑–ª–∞: AC:EB:E6:49:10:28</p>
            <button id="btnOn" onclick="sendCommand('LED_ON')">‚ñ∂ –í–ö–õ–Æ–ß–ò–¢–¨ LED</button>
            <button id="btnOff" onclick="sendCommand('LED_OFF')">‚è∏ –í–´–ö–õ–Æ–ß–ò–¢–¨ LED</button>
            <div id="status">–°—Ç–∞—Ç—É—Å: –û–∂–∏–¥–∞–Ω–∏–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è...</div>
            <script>
                const ws = new WebSocket('ws://' + window.location.hostname + '/ws');
                ws.onopen = function() {
                    document.getElementById('status').innerHTML = '–°—Ç–∞—Ç—É—Å: <span class="on">–ü–æ–¥–∫–ª—é—á—ë–Ω –∫ —Ö–∞–±—É</span>';
                };
                ws.onmessage = function(event) {
                    const msg = JSON.parse(event.data);
                    if(msg.type === 'status') {
                        const statusElem = document.getElementById('status');
                        statusElem.innerHTML = '–°—Ç–∞—Ç—É—Å —É–∑–ª–∞: <span class="' + msg.state + '">' + msg.text + '</span>';
                        if(msg.state === 'on') {
                            document.getElementById('btnOn').style.opacity = '0.6';
                            document.getElementById('btnOff').style.opacity = '1';
                        } else {
                            document.getElementById('btnOn').style.opacity = '1';
                            document.getElementById('btnOff').style.opacity = '0.6';
                        }
                    }
                };
                function sendCommand(cmd) {
                    ws.send(JSON.stringify({command: cmd}));
                }
            </script>
        </body>
        </html>
        )rawliteral";
        request->send(200, "text/html", html);
    });

    ws.onEvent(onWebSocketEvent);
    server.addHandler(&ws);
    server.begin();
    Serial.println("‚úÖ –í–µ–±-—Å–µ—Ä–≤–µ—Ä –∏ WebSocket –∑–∞–ø—É—â–µ–Ω—ã.");

    // ------ 3. –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø ESP-NOW (–ù–û–í–´–ô API –¥–ª—è Core 3.3.5) ------
    WiFi.mode(WIFI_AP_STA); // –í–∞–∂–Ω–æ! –†–µ–∂–∏–º AP+STA –¥–ª—è —Ä–∞–±–æ—Ç—ã ESP-NOW
    if (esp_now_init() != ESP_OK) {
        Serial.println("‚ùå –û—à–∏–±–∫–∞ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ ESP-NOW!");
        while(1) delay(1000);
    }
    
    // –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –∫–æ–ª–±—ç–∫–æ–≤ —Å –Ω–æ–≤—ã–º–∏ —Å–∏–≥–Ω–∞—Ç—É—Ä–∞–º–∏
    esp_now_register_send_cb(onEspNowDataSent);
    esp_now_register_recv_cb(onEspNowDataRecv);

    // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –ø–∏—Ä–∞ (—É–¥–∞–ª—ë–Ω–Ω–æ–≥–æ —É–∑–ª–∞)
    esp_now_peer_info_t peerInfo = {};
    memcpy(peerInfo.peer_addr, nodeMacAddress, 6);
    peerInfo.channel = 0;
    peerInfo.encrypt = false;
    if (esp_now_add_peer(&peerInfo) != ESP_OK) {
        Serial.println("‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –¥–æ–±–∞–≤–∏—Ç—å —É–∑–µ–ª –≤ ESP-NOW!");
    } else {
        Serial.println("‚úÖ –£–∑–µ–ª –¥–æ–±–∞–≤–ª–µ–Ω –≤ ESP-NOW.");
    }
    
    Serial.println("\n=== –•–ê–ë –ì–û–¢–û–í –ö –†–ê–ë–û–¢–ï ===");
    Serial.println("1. –ü–æ–¥–∫–ª—é—á–∏—Ç–µ Android/–ü–ö –∫ —Å–µ—Ç–∏: " + String(AP_SSID));
    Serial.println("2. –û—Ç–∫—Ä–æ–π—Ç–µ –≤ –±—Ä–∞—É–∑–µ—Ä–µ: http://" + WiFi.softAPIP().toString());
    Serial.println("3. –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–Ω–æ–ø–∫–∏ –¥–ª—è —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è —É–∑–ª–æ–º\n");
}

// ===================== LOOP =====================
void loop() {
    ws.cleanupClients(); // –û—á–∏—Å—Ç–∫–∞ –Ω–µ–∞–∫—Ç–∏–≤–Ω—ã—Ö WebSocket –∫–ª–∏–µ–Ω—Ç–æ–≤
    delay(10);
}

// ------ –û–ë–†–ê–ë–û–¢–ß–ò–ö –°–û–ë–´–¢–ò–ô WEB SOCKET ------
void onWebSocketEvent(AsyncWebSocket *server, AsyncWebSocketClient *client, 
                      AwsEventType type, void *arg, uint8_t *data, size_t len) {
    if (type == WS_EVT_DATA) {
        JsonDocument doc;
        DeserializationError error = deserializeJson(doc, data, len);
        if (!error && doc.containsKey("command")) {
            String cmd = doc["command"].as<String>();
            Serial.print("üì® –ö–æ–º–∞–Ω–¥–∞ —Å –≤–µ–±-—Å—Ç—Ä–∞–Ω–∏—Ü—ã: ");
            Serial.println(cmd);
            sendCommandToNode(cmd);
        }
    }
}

// ------ –û–¢–ü–†–ê–í–ö–ê –ö–û–ú–ê–ù–î–´ –ù–ê –£–ó–ï–õ –ü–û ESP-NOW ------
void sendCommandToNode(String cmd) {
    strncpy(outgoingMessage.command, cmd.c_str(), sizeof(outgoingMessage.command)-1);
    outgoingMessage.sender_id = 1; // ID —Ö–∞–±–∞
    
    esp_err_t result = esp_now_send(nodeMacAddress, (uint8_t *) &outgoingMessage, sizeof(outgoingMessage));
    if (result == ESP_OK) {
        Serial.print("üì° –ö–æ–º–∞–Ω–¥–∞ '");
        Serial.print(cmd);
        Serial.println("' –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞ –ø–æ ESP-NOW.");
    } else {
        Serial.print("‚ùå –û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ ESP-NOW: ");
        Serial.println(result);
    }
}

// ------ –ö–û–õ–ë–≠–ö –ü–û–î–¢–í–ï–†–ñ–î–ï–ù–ò–Ø –û–¢–ü–†–ê–í–ö–ò ESP-NOW (–ù–û–í–´–ô API) ------
void onEspNowDataSent(const wifi_tx_info_t *info, esp_now_send_status_t status) {
    Serial.print("‚úâÔ∏è –î–æ—Å—Ç–∞–≤–∫–∞ ESP-NOW: ");
    Serial.println(status == ESP_NOW_SEND_SUCCESS ? "–£—Å–ø–µ—Ö" : "–û—à–∏–±–∫–∞");
}

// ------ –ö–û–õ–ë–≠–ö –ü–†–ò–Å–ú–ê –î–ê–ù–ù–´–• –ü–û ESP-NOW (–ù–û–í–´–ô API) ------
void onEspNowDataRecv(const esp_now_recv_info_t *recv_info, const uint8_t *incomingData, int len) {
    const uint8_t *senderMac = recv_info->src_addr;
    memcpy(&incomingMessage, incomingData, sizeof(incomingMessage));
    
    Serial.print("üì• –ü–æ–ª—É—á–µ–Ω–æ –æ—Ç ");
    for (int i = 0; i < 6; i++) {
        Serial.print(senderMac[i], HEX);
        if (i < 5) Serial.print(":");
    }
    Serial.print(": ");
    Serial.print(incomingMessage.command);
    Serial.print(" –æ—Ç ID:");
    Serial.println(incomingMessage.sender_id);

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–π –æ—Ç —É–∑–ª–∞
    if (strcmp(incomingMessage.command, "ACK_ON") == 0) {
        broadcastStatus("LED –Ω–∞ —É–∑–ª–µ –í–ö–õ–Æ–ß–Å–ù");
    } else if (strcmp(incomingMessage.command, "ACK_OFF") == 0) {
        broadcastStatus("LED –Ω–∞ —É–∑–ª–µ –í–´–ö–õ–Æ–ß–ï–ù");
    }
}

// ------ –û–¢–ü–†–ê–í–ö–ê –°–¢–ê–¢–£–°–ê –í–°–ï–ú WEB SOCKET –ö–õ–ò–ï–ù–¢–ê–ú ------
void broadcastStatus(String statusText) {
    JsonDocument doc;
    doc["type"] = "status";
    doc["text"] = statusText;
    doc["state"] = statusText.indexOf("–í–ö–õ") != -1 ? "on" : "off";
    
    String jsonResponse;
    serializeJson(doc, jsonResponse);
    ws.textAll(jsonResponse);
    
    Serial.print("üåê –í–µ–±-—Å—Ç–∞—Ç—É—Å –æ–±–Ω–æ–≤–ª—ë–Ω: ");
    Serial.println(statusText);
}
