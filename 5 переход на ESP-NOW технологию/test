        }
        .btn:hover {
            background-color: #45a049;
        }
        .btn-off {
            background-color: #f44336;
        }
        .btn-off:hover {
            background-color: #d32f2f;
        }
        .btn-status {
            background-color: #008CBA;
        }
        .btn-status:hover {
            background-color: #007B9A;
        }
